<div class="bg-white rounded-lg shadow-md overflow-hidden">
  <img src="<%= product.image %>" alt="<%= product.name %>" class="w-full h-64 object-cover">
  
  <div class="p-6">
    <div class="flex justify-between items-start">
      <div>
        <h1 class="text-2xl font-bold text-gray-800"><%= product.name %></h1>
        <p class="text-gray-500 text-sm mt-1">Sold by: <%= product.seller %></p>
      </div>
      <span class="text-2xl font-bold text-blue-600">$<%= product.price.toFixed(2) %></span>
    </div>

    <div class="mt-6">
      <h2 class="text-lg font-semibold text-gray-800">Description</h2>
      <p class="text-gray-600 mt-2"><%= product.description %></p>
    </div>

    <div class="mt-8 flex space-x-4">
      <% if (user && user.id === product.user_id) { %>
        <a href="/products/<%= product.id %>/edit" 
           class="flex-1 text-center bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600 transition duration-300">
          <i class="fas fa-edit mr-2"></i>Edit
        </a>
        <form action="/products/<%= product.id %>?_method=DELETE" method="POST" class="flex-1">
          <button type="submit" 
                  class="w-full bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600 transition duration-300">
            <i class="fas fa-trash mr-2"></i>Delete
          </button>
        </form>
      <% } %>
      <a href="/products" 
         class="flex-1 text-center bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600 transition duration-300">
        <i class="fas fa-arrow-left mr-2"></i>Back
      </a>
    </div>
  </div>
</div>