<div class="flex justify-between items-center mb-8">
  <h1 class="text-3xl font-bold text-gray-800">All Products</h1>
  <% if (user) { %>
    <a href="/products/create" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition duration-300">
      <i class="fas fa-plus mr-2"></i>Add Product
    </a>
  <% } %>
</div>

<% if (products.length > 0) { %>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <% products.forEach(product => { %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-300">
        <img src="<%= product.image %>" alt="<%= product.name %>" class="w-full h-48 object-cover">
        <div class="p-4">
          <h2 class="text-xl font-semibold text-gray-800"><%= product.name %></h2>
          <p class="text-gray-600 mt-2">$<%= product.price.toFixed(2) %></p>
          <p class="text-gray-500 text-sm mt-2">Sold by: <%= product.seller %></p>
          <div class="mt-4 flex space-x-2">
            <a href="/products/<%= product.id %>" 
               class="flex-1 text-center bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition duration-300">
              View
            </a>
            <% if (user && user.id === product.user_id) { %>
              <a href="/products/<%= product.id %>/edit" 
                 class="flex-1 text-center bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600 transition duration-300">
                Edit
              </a>
            <% } %>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
<% else { %>
  <div class="bg-white p-8 rounded-lg shadow-md text-center">
    <p class="text-gray-600">No products available yet.</p>
    <% if (user) { %>
      <a href="/products/create" class="mt-4 inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition duration-300">
        Add Your First Product
      </a>
    <% } %>
  </div>
<% } %>